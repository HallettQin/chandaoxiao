		var top = wginfo.height();
		if(parent.hasClass("whodet-cur")){
			parent.removeClass("whodet-cur");
			wginfo.css({"top":0});
		}else{
			parent.addClass("whodet-cur");
			wginfo.css({"top":-(top+2)});
